<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#dfe2d9"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv_chat_list"
        android:layout_margin="5dp"
        android:visibility="visible"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:id="@+id/iv_chat_list"
            android:layout_centerVertical="true"
            android:src="@drawable/user_icon"
            android:padding="10dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tv_nick_chatList"
                android:text="nick"
                android:textSize="20dp"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_content_chatList"
                android:text="content"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_chatList_idx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_time_chatList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="오후 1:28"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            />

            <TextView
                android:id="@+id/tv_readCnt"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/tv_time_chatList"
                android:layout_alignParentRight="true"
                android:background="@drawable/redball"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:layout_marginRight="10dp"
                />


        </RelativeLayout>

    </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>